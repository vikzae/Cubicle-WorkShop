<h1>{{product.name}}</h1>
<img class="cube" src="{{product.imageUrl}}">
<div class="details">
    <p><span>Description:</span>{{product.description}}</p>
    <p><span>Difficulty level:</span>{{product.level}}</p>
    <a class="btn" href="/products">Back</a>
    <a class="btn" href="/accessory/attach/{{product._id}}">Attach</a>
    <a class="btn" href="/products/edit/{{product._id}}">EDIT</a>
    <a class="btn" href="/products/delete/{{product._id}}">DELETE</a>
</div>
<h2>Accessories</h2>
    {{#if accessory}}
<div class="accessories">
    {{#each accessory}}
    <div class="accessory">
        <img src="{{this.imageUrl}}" alt="stickerName">
        <h3>{{this.name}}</h3>
        <p>{{this.description}}</p>
    </div>
    {{/each}}
    </div>
    {{else}}
    <h3 class="italic">This cube has no accessories yet...</h3>
    {{/if}}
</div>